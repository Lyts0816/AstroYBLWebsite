---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { Image } from 'astro:assets';
import headerLogo from '../assets/header-logo.png';
---

<header>
	<nav>
		<h2><a href="/"><Image src={headerLogo} alt="Logo" width={200} height={250} /></a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/tripsched">Trip Schedules</HeaderLink>
			<HeaderLink href="/services">Services</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.facebook.com/yellowbuslineOfficial" target="_blank" class="transition duration-300 hover:opacity-80">
				<span class="sr-only">Follow Yellow Bus Line Inc. on Facebook</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.166 1.791.166v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: #28156E;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: white;
	}
	.internal-links {
		flex: 1;
		display: flex;
		justify-content: center;
		gap: 2rem;
	}
	.social-links a {
		transition: opacity 0.3s ease;
	}
	.social-links a:hover {
		opacity: 0.8;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
